<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    android:visibility="invisible">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_color_bg"
        android:orientation="vertical" >

       <ImageView
           android:id="@id/editsizesmall"
		    android:layout_width="60dip"
		    android:layout_height="45dip"
		    android:src="@drawable/edit_size_small"
		    android:background="@drawable/edit_select_bg"
		    android:scaleType="center"
		    android:gravity="center"/>
        

        <ImageView
           android:id="@id/editsizemiddle"
		    android:layout_width="60dip"
		    android:layout_height="45dip"
		    android:src="@drawable/edit_size_middle"
		    android:background="@drawable/edit_select_bg"
		    android:scaleType="center"
		    android:gravity="center" />
        
        <ImageView
           android:id="@id/editsizelarge"
		    android:layout_width="60dip"
		    android:layout_height="45dip"
		    android:src="@drawable/edit_size_large"
		    android:background="@drawable/edit_select_bg"
		    android:scaleType="center"
		    android:gravity="center" />
        
    </LinearLayout>

</FrameLayout>