<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/black" >
<!-- 显示图片的gallery -->
    <com.tvmining.wifiplus.view.InteractGallery
                android:id="@+id/interactgallery"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_centerInParent="true" />
        
    <ImageView
           android:id="@id/editmaskview"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:background="@color/dark_black"
		    android:visibility="gone"/>
    
    <ImageView
           android:id="@id/interactfacemaskview"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:background="@color/transparent"
		    android:visibility="gone"/>
    
    
    <RelativeLayout
                    android:id="@+id/nointeractlayout"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@color/black" >
        
            
	        <ImageView
		            android:id="@+id/interactmaskimageview"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="@string/remote_not_user"
		            android:layout_centerInParent="true"
		            android:layout_marginBottom="10dip"
		            android:src="@drawable/interact_wait" />
	        
	        
        </RelativeLayout>
        
    <com.tvmining.wifiplus.canvas.view.SketchPadView
           android:id="@id/cameraimageview"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:background="@color/black"
		    android:scaleType="fitCenter"
		    android:layout_centerInParent="true"
		    android:visibility="gone"/>
    
        <FrameLayout
            android:id="@+id/expressionlayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" >

<!-- 聊天类 -->
            <com.tvmining.com.chat.ChatView
                android:id="@+id/chatview"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content" />
            <!-- 绘画控件 -->
            <LinearLayout 
                android:id="@+id/editview"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:background="@color/white"
			    android:visibility="gone" >
			    
                <ImageView
		            android:id="@+id/editcancel"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
		            android:scaleX="1.0"
		            android:scaleY="1.0"
		            android:layout_gravity="center"
		            android:src="@drawable/edit_cancel_bg" />
		        
		        <ImageView
		            android:id="@+id/editcolor"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
		            android:scaleX="1.0"
		            android:scaleY="1.0"
		            android:layout_gravity="center"
		            android:src="@drawable/edit_blue" />
		
		        <ImageView
		            android:id="@+id/editclear"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
		            android:scaleX="1.0"
		            android:scaleY="1.0"
		            android:layout_gravity="center"
		            android:src="@drawable/edit_clear_bg" />
                
                <ImageView
		            android:id="@+id/editsize"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
		            android:scaleX="1.0"
		            android:scaleY="1.0"
		            android:layout_gravity="center"
		            android:src="@drawable/edit_size_bg" />
		
                <RelativeLayout
                    android:id="@+id/editcommitlayout"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_gravity="center"
				    android:gravity="center"
				    android:layout_weight="1"
				     >
                
                    <ImageView
			            android:id="@+id/editcommitview"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_centerInParent="true"
			            android:src="@drawable/interact_commit_btn_bg" />
                    
			        <TextView
			            android:id="@+id/editcommittext"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:textSize="15sp"
			            android:layout_centerInParent="true"
			            android:gravity="center"
			            android:text="@string/answer_submit_btn"
			            android:background="@drawable/interact_commit_btn_bg"
			            android:textColor="@color/white" />
                </RelativeLayout>
            </LinearLayout>
            
            <LinearLayout 
                android:id="@+id/answerselectview"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:background="@color/white"
			    android:visibility="gone" >
			    
                <Button
		            android:id="@+id/answerselectA"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
		            android:scaleX="1.0"
		            android:scaleY="1.0"
		            android:text="@string/chara"
		            android:layout_gravity="center"
		            android:background="@drawable/answer_btn" />
		        
		        <Button
		            android:id="@+id/answerselectB"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
		            android:scaleX="1.0"
		            android:scaleY="1.0"
		            android:text="@string/charb"
		            android:layout_gravity="center"
		            android:background="@drawable/answer_btn" />
		
		        <Button
		            android:id="@+id/answerselectC"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
		            android:scaleX="1.0"
		            android:scaleY="1.0"
		            android:text="@string/charc"
		            android:layout_gravity="center"
		            android:background="@drawable/answer_btn" />
                
                <Button
		            android:id="@+id/answerselectD"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
		            android:scaleX="1.0"
		            android:scaleY="1.0"
		            android:text="@string/chard"
		            android:layout_gravity="center"
		            android:background="@drawable/answer_btn" />
                
                <Button
		            android:id="@+id/answerselectE"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
		            android:scaleX="1.0"
		            android:scaleY="1.0"
		            android:text="@string/chare"
		            android:layout_gravity="center"
		            android:background="@drawable/answer_btn" />
		
                <RelativeLayout
                    android:id="@+id/answerselectcommitlayout"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_gravity="center"
				    android:gravity="center"
				    android:layout_weight="1"
				     >
                
                    <ImageView
			            android:id="@+id/answerselectcommitview"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_centerInParent="true"
			            android:src="@drawable/interact_commit_btn_bg" />
                    
			        <TextView
			            android:id="@+id/answerselectcommittext"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:textSize="15sp"
			            android:layout_centerInParent="true"
			            android:gravity="center"
			            android:text="@string/answer_submit_btn"
			            android:background="@drawable/interact_commit_btn_bg"
			            android:textColor="@color/white" />
                </RelativeLayout>
            </LinearLayout>
            
        </FrameLayout>

        
</RelativeLayout>