<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/black" >

    <RelativeLayout
        android:id="@+id/controllayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/bg_color_remote_bottom"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/remotebg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/remote_bg" />

        
        
        <RelativeLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:id="@+id/matchscreen"
		    android:layout_below="@+id/controltop"
		    android:visibility="gone"
		    >
			<ExpandableListView
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:background="@android:color/transparent"
		        android:id="@+id/screenlistview"
		        android:fadingEdge="none" 
		        />
			 <TextView 
		        android:layout_width="fill_parent"
		        android:layout_height="1dip"
		        android:id="@+id/downline"
		        android:layout_below="@id/screenlistview"
				android:background="#9DE9FF"
		        />
		</RelativeLayout>
        
        
        
        
        <RelativeLayout
            android:id="@+id/controltop"
            android:background="@color/bg_color_remote_top"
            android:layout_width="fill_parent"
        	android:layout_height="65dip"
        	android:layout_alignParentTop="true"
         	>

            <TextView
                android:id="@+id/match"
                android:layout_width="70dip"
                android:layout_height="match_parent"
                android:text="选屏"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:clickable="false"
                android:layout_marginLeft="10dip"
                 />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/match"
                android:layout_marginLeft="3dip"
                android:layout_centerVertical="true"
                android:src="@drawable/remote_top_devider"
                 />
            
            <TextView
            android:id="@+id/matchname"
            android:layout_width="match_parent"
            android:layout_height="65dip"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
        
        <!-- <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="2dip"
            android:gravity="center_horizontal"
            android:layout_below="@id/matchname"
            android:textColor="@android:color/white"
            android:text="应用名称"
            android:textSize="14sp" /> -->
            
            

            <TextView
                android:id="@+id/scancode"
                android:layout_width="70dip"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dip"
                android:layout_centerVertical="true"
                android:text="扫一扫"
                android:gravity="center"
                 />
            
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_toLeftOf="@id/scancode"
                android:layout_centerVertical="true"
                android:layout_marginRight="3dip"
                android:src="@drawable/remote_top_devider"
                 />
        </RelativeLayout>

        
        <RelativeLayout
            android:id="@+id/advancelayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/controltop" >


            <RelativeLayout
                android:id="@+id/cmdlayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="50dip"
                android:layout_gravity="top"
                android:gravity="top" >

                <TextView
                    android:id="@+id/remote_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignWithParentIfMissing="false"
                    android:layout_centerHorizontal="false"
                    android:layout_centerInParent="false"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="29dip"
                    android:layout_marginRight="29dip"
                    android:drawablePadding="10dip"
                    android:background="@drawable/remote_cancel_btn_bg"
                    android:gravity="center_vertical|top|bottom|center_horizontal"
                    
                    android:text="@string/menu"
                    android:textColor="@color/text_color_selector_dark"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/remote_cancle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="false"
                    android:layout_centerInParent="false"
                    android:layout_centerVertical="false"
                    android:layout_marginLeft="29dip"
                    android:layout_marginRight="29dip"
                    android:drawablePadding="10dip"
                    android:background="@drawable/remote_cancel_btn_bg"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/cancel"
                    android:textColor="@color/text_color_selector_dark"
                    android:textSize="18sp" />
            </RelativeLayout>

            <FrameLayout
                android:id="@+id/viewpagerlayout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:visibility="gone" >

                <ImageView
                    android:id="@+id/swipeMaskView"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#b0000000" />

                <ImageView
                    android:id="@+id/currentexp"
                    android:layout_width="wrap_content"
                    android:layout_height="77dip"
                    android:layout_gravity="center_horizontal|top"
                    android:layout_marginTop="50dip"
                    android:gravity="center" />

                <RelativeLayout
                    android:id="@+id/showlayout"
                    android:layout_width="fill_parent"
                    android:layout_height="350dip"
                    android:layout_gravity="bottom"
                    android:background="@color/transparent"
                    android:gravity="top" >

                    <android.support.v4.view.ViewPager
                        android:id="@+id/viewpager"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </FrameLayout>
        </RelativeLayout>
        
        <RelativeLayout
                    android:id="@+id/unusedlayout"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@color/black"
                    android:layout_below="@id/controltop" >
        
            <TextView
		            android:id="@+id/remotemasktextview"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="@string/remote_not_user"
		            android:gravity="center"
		            android:layout_centerInParent="true"
		             />
            
	        <ImageView
		            android:id="@+id/remotemaskimageview"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="@string/remote_not_user"
		            android:layout_centerHorizontal="true"
		            android:layout_marginBottom="10dip"
		            android:layout_above="@id/remotemasktextview"
		            android:src="@drawable/unused" />
	        
	        
        </RelativeLayout>
    </RelativeLayout>

    

</RelativeLayout>