<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ImageView
           android:id="@id/interactmaskview"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:background="@color/dark_black"
		    android:visibility="gone"/>
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
         >
    
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="65dip"
	        android:id="@+id/interactcameralayout"
	        android:background="@drawable/interact_camera_bottom_bg"
	        android:layout_alignParentBottom="true" >
	      
	    		<RelativeLayout
	    		    android:id="@+id/interactcamerabtn"
			        android:layout_width="fill_parent"
			        android:layout_height="fill_parent"
			        android:layout_gravity="center"
			        android:gravity="center"
			        android:layout_weight="1" >
			
				    <ImageView
			           	android:id="@id/interactgallerycamera"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:layout_centerInParent="true"
					    android:background="@drawable/interact_camera_btn_bg"/>
				    
				    <TextView
					    android:layout_width="fill_parent"
					    android:layout_height="fill_parent"
					    android:layout_centerVertical="true"
					    android:gravity="center"
					    android:layout_toRightOf="@id/interactgallerycamera"
					    android:text="@string/interact_camera_select"/>
			        
			    </RelativeLayout>
			    
	    		<ImageView
					    android:layout_width="wrap_content"
					    android:layout_height="fill_parent"
					    android:background="@drawable/interact_camera_devider"/>
	    		
	    		<RelativeLayout
	    		    android:id="@+id/interactgallerybtn"
			        android:layout_width="fill_parent"
			        android:layout_height="fill_parent"
			        android:layout_weight="1">
			
				    <ImageView
			           	android:id="@id/interactgalleryphoto"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:layout_centerInParent="true"
					    android:background="@drawable/interact_gallery_btn_bg"/>
				    
				    <TextView
					    android:layout_width="fill_parent"
					    android:layout_height="fill_parent"
					    android:layout_toRightOf="@id/interactgalleryphoto"
					    android:layout_centerVertical="true"
					    android:gravity="center"
					    android:text="@string/interact_gallery_select"/>
			        
			    </RelativeLayout>
	      	</LinearLayout>
    </RelativeLayout>
</FrameLayout>