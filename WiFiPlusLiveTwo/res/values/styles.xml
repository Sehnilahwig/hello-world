<?xml version="1.0" encoding="utf-8"?>

<resources>
	<style name="app_theme" parent="android:Theme.NoTitleBar">
		<item name="android:windowBackground">@drawable/app_background</item>
	</style>	
    <style name="list_item_single">
        <item name="android:clickable">true</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingBottom">10dip</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/background_view_rounded_single</item>
    </style>
    
    <style name="content_page_small_text">
        <item name="android:duplicateParentState">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_color_selector</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="content_page_large_text">
        <item name="android:duplicateParentState">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">@color/text_color_selector</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="content_page_small_text_unsans">
        <item name="android:duplicateParentState">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/content_page_text</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="content_page_large_text_unsans">
        <item name="android:duplicateParentState">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/content_page_text</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="list_item_single_unclick">
        <item name="android:clickable">false</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingBottom">10dip</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/background_view_rounded_single_unclick</item>
    </style>

    
    <style name="content_page_small_text_unclick">
        <item name="android:duplicateParentState">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_color_selector_unclick</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="content_page_large_text_unclick">
        <item name="android:duplicateParentState">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">@color/text_color_selector_unclick</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>
    
    
    
    <style name="list_container">
        <item name="android:background">@drawable/background_view_rounded_container</item>
    </style>
    
    <style name="list_item_chevron">
        <item name="android:paddingLeft">4.0dip</item>
        <item name="android:paddingTop">2.0dip</item>
        <item name="android:paddingRight">4.0dip</item>
        <item name="android:paddingBottom">2.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/chevron</item>
        <item name="android:duplicateParentState">true</item>
    </style>
    
    <style name="list_item_top">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingBottom">10dip</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/background_view_rounded_top</item>
    </style>
    
    <style name="list_item_top_unclick">
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingBottom">10dip</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/background_view_rounded_top_unclick</item>
    </style>
    
    <style name="list_item_middle">
        <item name="android:clickable">true</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingBottom">10dip</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/background_view_rounded_middle</item>
    </style>
    
    <style name="list_item_middle_unclick">
        <item name="android:clickable">false</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingBottom">10dip</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/background_view_rounded_middle_unclick</item>
    </style>
    
    <style name="list_item_bottom">
        <item name="android:clickable">true</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingBottom">10dip</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/background_view_rounded_bottom</item>
    </style>
    
    <style name="list_item_bottom_unclick">
        <item name="android:clickable">false</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingBottom">10dip</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/background_view_rounded_bottom_unclick</item>
    </style>
    
    <style name="UITableView">
        <item name="android:layout_width">fill_parent</item>
    </style>
    
    <!-- 淡入淡出 -->
    <style name="popupAnimationChange" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/fade_in</item>
        <item name="@android:windowExitAnimation">@anim/fade_out</item>
    </style>
    
    <style name="title_right_button">
        <item name="android:paddingLeft">@dimen/title_rightButton_padding</item>
        <item name="android:paddingRight">@dimen/title_rightButton_padding</item>
        <item name="android:clickable">true</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@drawable/back_button_default_style</item>
    </style>
    
      <style name="MyCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
          <item name="android:button">@drawable/checkboxselector</item>
          <item name="android:paddingLeft">25.0dip</item>
          <item name="android:maxHeight">10.0dip</item>
      </style>
      
      
      <style name="progressbarstyle" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/loading</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

</resources> 
